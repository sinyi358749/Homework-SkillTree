


<table class="table">
    <thead>
        <tr>
            <th>
                流水號
            </th>
            <th>
                分類
            </th>
            <th>
                日期
            </th>
            <th>
                金額
            </th>
            <th>
                備註
            </th>
            <th>
                <span>功能</span>
            </th>
        </tr>
    </thead>

    <tbody>

        @if (ViewBag.BookKeepings != null)
        {
            var index= 0;
            foreach (var item in ViewBag.BookKeepings)
            {
                index++;
                <tr>
                    <td>
                        @index
                    </td>
                    <td>
                        @item.Category
                    </td>
                    <td>
                        @item.TransDate
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a asp-route-id="@item.Id" onclick="alert('尚未開發');">Edit</a> |
                        <a asp-route-id="@item.Id" onclick="alert('尚未開發');">Details</a> |
                        <a asp-route-id="@item.Id" onclick="alert('尚未開發');">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
